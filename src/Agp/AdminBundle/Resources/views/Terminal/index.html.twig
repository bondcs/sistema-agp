{% extends "AgpAdminBundle:Terminal:base-terminal.html.twig" %}
    
{% block content %}
<div>
<div class="wrapper-widget" style="min-width: 520px;">
    <div class="row-fluid">
        <div class="span12 well well-small header-grid"><span><i class="icon-th"></i><span class="break"></span>Lista de Terminais<i class="icon-chevron-down pull-right" data-toggle="collapse" data-target="#widgetDefault"></i></span></div>
    </div>
    <div id="widgetDefault" class="content-widget collapse in">
         <form id="formTable" action="" method="POST">
             <table class="toolstable table table-striped" style="min-width: 430px;">
                <colgroup>
                    <col class="con0" />
                    <col class="con1" />
                    <col class="con0" />
                    <col class="con1" />
                    <col class="con0" />
                    <col class="con1" />
                    <col class="con0" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="head0" style="width: 50px;"></th>
                        <th class="head1">Número de Série</th>
                        <th class="head0">Fabricante</th>
                        <th class="head1">Versão</th>
                        <th class="head0">Data de Entrada</th>
                        <th class="head1">Situacao</th>
                        <th class="head0" style="width: 300px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
         </form>
    </div>
 </div>  
</div>
{% endblock %}

{% block javascript_diff %}
<script type="text/javascript">
$(document).ready(function()
{   
    dtNewProps = {
              "bDeferRender": true,
              "sServerMethod": "POST",
              "sAjaxSource": Routing.generate("terminalAjax"),
              "aoColumns": [
                { "mDataProp": "codTerminal",
                    "sClass" : "center"},
                { "mDataProp": "noSerie" },
                { "mDataProp": "fabricante"},
                { "mDataProp": "versao" },
                { "mDataProp": "dtEntrada" },
                { "mDataProp": "situacao" },
                { "mDataProp": "codTerminal",
                    "sClass" : "center"}, 
              ],
              "aoColumnDefs": [{"bSortable": false, "aTargets": [0]},
                               {"bSortable": false, "aTargets": [2]}],
              "fnRowCallback": function ( nRow, aData, iStart, iEnd, aiDisplay ) {
                 $('td:eq(0)', nRow).html('<input class="check-table" type="checkbox" name="registros[]" value="'+aData['codTerminal']+'">'); 
                 $('td:eq(1)', nRow).html('<a class="link" href="'+Routing.generate("showByAdmin", {"id" : aData['codTerminal']})+'">'+aData['noSerie']+'</a>');
                 $('td:eq(4)', nRow).html(formataDate(aData["dtEntrada"]["date"]));
                 $('td:eq(6)', nRow).html(
                    "<a class='btn action action-edit' href="+Routing.generate("terminalEdit", {"id" : aData['codTerminal']})+" title='Editar Terminal'><i class='icon-file'></i>Editar</a>"+
                    "<a class='btn action' href="+Routing.generate("showByAdmin", {"id" : aData['codTerminal']})+" title='Gerenciar Terminal'><i class='icon-briefcase'></i>Gerenciar</a>"+
                    "<a class='btn action action-confirm' data-href='"+Routing.generate("terminalDelete", {"id" : aData['codTerminal']})+"' data-texto='Deletar este Terminal: "+aData['noSerie']+"' title='Deletar Terminal' ><i class='icon-trash'></i>Deletar</a>"
                 );
              },
             
     }
        
    dtToolsProps = {
         "aButtons": [
            "copy",
            "print",
            "pdf",
            {
                "sExtends": "text",
                "sButtonText": 'Adicionar',
                "fnClick" : function(){
                    ajaxLoadDialog(Routing.generate("terminalAdd") , "Adicionar Terminal")
                },
            },
            {
                "sExtends": "text",
                "sButtonText": "Deletar",
                "sButtonClass": "hidden check-button",
                "fnClick" : function(){
                    formConfirmGroupDelete($("#formTable"), Routing.generate("terminalGroupDelete"))            
                }
            },
         ]
    };

    initDataTableTools(tTable, dtNewProps, dtToolsProps);
 
});
  
</script>
{% endblock %}
