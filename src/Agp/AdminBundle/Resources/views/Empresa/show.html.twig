{% extends "AgpAdminBundle:Empresa:base-empresa.html.twig" %}

{% block menuside %}{% endblock %}
{% block width_content %}span12{% endblock %}

{% block title %}Empresa: {{entity.razaoSocial}}{% endblock %}
    
{% block content %}
<div>
    {% block breadcrumb %}
            <ul class="breadcrumb">
               <li><a href="{{path("pageIndex")}}">Home</a> <span class="divider">/</span></li>
               <li><a href="{{path("empresaIndex")}}">Lista de empresas</a></li>
            </ul>
    {% endblock %}
    <div class="wrapper-widget" style="min-width: 520px;">
        <div class="row-fluid">
            <div class="span12 well well-small header-grid"><span><i class="icon-th"></i><span class="break"></span>Empresa: {{entity.razaoSocial}}<i class="icon-chevron-down pull-right" data-toggle="collapse" data-target="#widgetDefault"></i></span></div>
        </div>
        <div id="widgetDefault" class="content-widget content-widget-profile collapse in">
            <div class="row-fluid">
                <div class="span2 menu-profile">
                    <ul class="nav nav-list">
                        <li><a href="{{path("showEmpresa", {"id" : entity.codEmpresa})}}">Informações<i class="icon-picture"></i></a></li>
                        <li><a href="{{path("empresaTerminal", {"id" : entity.codEmpresa})}}">Terminais<i class="icon-lock"></i></a></li>
                        <li><a href="{{path("pessoaIndex", {"id" : entity.codEmpresa})}}">Usuários<i class="icon-user"></i></a></li>
                        {#<li><a href="#">Vendas<i class="icon-shopping-cart"></i></a></li>#}
                    </ul>
                </div>
                <div class="span10 content-profile">
                    {% block contentProfile %}
                    <fieldset>
                    <legend>Informações</legend>
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a data-target="#empresa">Empresa</a></li>
                        <li><a data-target="#endereco">Endereço</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="empresa">
                             <table class="table table-striped table-info">
                                <tr>
                                    <th style="width: 25%">Razão social: </th>
                                    <td style="width: 25%">{{entity.razaoSocial}}</td>
                                    <th style="width: 15%">Fantasia: </th>
                                    <td style="width: 35%">{{entity.fantasia|default("")}}</td>
                                </tr>
                                <tr>
                                    <th>Cnpj: </th>
                                    <td>{{entity.cnpj}}</td>
                                    <th>Ie:</th>
                                    <td>{{entity.ie|default("")}}</td>
                                </tr>
                                <tr>
                                    <th>Im:</th>
                                    <td>{{entity.im|default("")}}</td>
                                    <th></th>
                                    <td></td>
                                </tr>
                            </table>
                        </div>
                        <div class="tab-pane" id="endereco">
                             <table class="table table-striped table-info ">
                                    <tr>
                                        <th style="width: 25%">Bairro:</th>
                                        <td style="width: 25%">{{entity.bairro|default("")}}</td>
                                        <th style="width: 15%">Endereço:</th>
                                        <td style="width: 35%">{{entity.endereco|default("")}}</td>
                                    </tr>
                                    <tr>
                                        <th>Cidade:</th>
                                        <td>{{entity.cidade.nome|default("")}}</td>
                                        <th>Cep:</th>
                                        <td>{{entity.cep|default("")}}</td>
                                    </tr>
                                    <tr>
                                        
                                        <th>Complemento:</th>
                                        <td>{{entity.complemento|default("")}}</td>
                                        <th></th>
                                        <td></td>
                                    </tr>
                               </table>
                        </div>
                    </div>
                    </fieldset>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>  
</div>
{% endblock %}

{% block javascript_diff %}
<script type="text/javascript">
    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
  
</script>
{% endblock %}
