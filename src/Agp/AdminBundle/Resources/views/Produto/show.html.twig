{% extends "AgpAdminBundle:Produto:base-produto.html.twig" %}

{% block menuside %}{% endblock %}
{% block width_content %}span12{% endblock %}

{% block title %}Produto: {{entity.nome}}{% endblock %}
    
{% block content %}
<div>
    {% block breadcrumb %}
            <ul class="breadcrumb">
               <li><a href="{{path("pageIndex")}}">Home</a> <span class="divider">/</span></li>
               <li><a href="{{path("produtoIndex")}}">Lista de produtos</a></li>
            </ul>
    {% endblock %}
    <div class="wrapper-widget" style="min-width: 520px;">
        <div class="row-fluid">
            <div class="span12 well well-small header-grid"><span class="title-profile"><i class="icon-th"></i><span class="break"></span>Produto: {{entity.nome}}<i class="icon-chevron-down pull-right" data-toggle="none" data-target="#widgetDefault"></i></span></div>
        </div>
        <div id="widgetDefault" class="content-widget content-widget-profile collapse in">
            <div class="row-fluid">
                <div class="span2 menu-profile">
                    <ul class="nav nav-list">
                        <li><a href="{{path("produtoShow", {"id" : entity.codProduto})}}">Informações<i class="icon-picture"></i></a></li>
                        <li><a href="{{path("entradaProdutoIndex", {"id" : entity.codProduto})}}">Aquisições<i class="icon-shopping-cart"></i></a></li>
                        <li><a href="#">Ajuste de Estoque<i class="icon-wrench"></i></a></li>
                    </ul>
                </div>
                <div class="span10 content-profile">
                    {% block contentProfile %}
                    <fieldset>
                    <legend>Informações</legend>
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active"><a data-target="#produto">Produto</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="produto">
                             <table class="table table-striped table-info">
                                <tr>
                                    <th style="width: 25%">Produto: </th>
                                    <td style="width: 25%">{{entity.nome}}</td>
                                    <th style="width: 25%">Valor base: </th>
                                    <td style="width: 25%">{{entity.vlrBase|number_format(2,',','')|default("")}}</td>
                                </tr>
                                <tr>
                                    <th>Quantidade Atual: </th>
                                    <td>{{entity.qtdeAtual|default("")}}</td>
                                    <th>Quantidade Mínima:</th>
                                    <td>{{entity.qtdeMinimo|default("")}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    </fieldset>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>  
</div>
{% endblock %}

{% block javascript_diff %}
<script type="text/javascript">
    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
  
</script>
{% endblock %}
