<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Pessoa" table="pessoa">
    <id name="codEmpresa" type="integer" column="cod_empresa"/>
    <id name="codPessoa" type="integer" column="cod_pessoa"/>
    <field name="nome" type="string" column="nome" length="45" nullable="false"/>
    <field name="cpf" type="string" column="cpf" length="45" nullable="false"/>
    <field name="rg" type="string" column="rg" length="45" nullable="true"/>
    <field name="dtNascimento" type="date" column="dt_nascimento" nullable="false"/>
    <field name="email" type="string" column="email" length="60" nullable="true"/>
    <field name="senha" type="string" column="senha" length="32" nullable="true"/>
    <field name="privilegio" type="string" column="privilegio" nullable="false"/>
  </entity>
</doctrine-mapping>
